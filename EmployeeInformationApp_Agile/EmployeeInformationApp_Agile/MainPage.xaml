<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeInformationApp_Agile.MainPage" Title="Add Employee">

    <ContentPage.Content>
        <StackLayout>
            <!--<Frame BackgroundColor="#2196F3" Padding="15" CornerRadius="0">
                <Label Text="Employee System!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>-->
            <Entry x:Name="Name" Placeholder="Name"/>
            <Entry x:Name="Address" Placeholder="Address"/>
            <Entry x:Name="PhoneNumber" Placeholder="PhoneNumber"/>
            <Entry x:Name="Email" Placeholder="Email"/>
            <Entry x:Name="Password" Placeholder="Password" IsPassword="True"/>
                
            <Button x:Name="SaveButton" Text="Save" Clicked="SaveButton_Clicked"
                    HorizontalOptions="FillAndExpand" BackgroundColor="#2196F3" TextColor="White" Margin="0,10,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
